{
  "name": "nebulus-db",
  "version": "0.3.0",
  "description": "Fast. Flexible. Serverless. The embedded database for the modern stack.",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/adapters/*",
    "packages/plugins/*"
  ],
  "scripts": {
    "preinstall": "node ./scripts/check-node-version.js",
    "pretest": "node ./scripts/check-node-version.js",
    "prebuild": "node ./scripts/check-node-version.js",
    "build:unix": "sh scripts/build.sh",
    "build:win": "scripts\\build.bat",
    "build": "run-script-os",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --coverage.provider=v8",
    "test:basic": "node tests/basic-test.js",
    "benchmark": "node benchmark.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,js,json,md}\""
  },
  "run-script-os": {
    "win32": "npm run build:win",
    "darwin:linux": "npm run build:unix"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.1",
    "@vitest/coverage-v8": "^3.1.2",
    "typescript": "^5.3.3",
    "vitest": "^3.1.2",
    "npm-run-all": "^4.1.5",
    "cross-env": "^7.0.3",
    "run-script-os": "^1.1.6"
  },
  "dependencies": {
    "better-sqlite3": "^12.1.1"
  }
}
